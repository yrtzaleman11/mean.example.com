extends ../layout
block content
  article
    h1= article.title
    div
      - var date = new Date(article.published).toISOString().slice(0, 19).replace('T', ' ');
      small Posted: #{date}
    div!= article.body
    a.button(href='/articles' onclick='viewIndex()') All Articles
    
  script(src='/dist/js/articles.app.min.js')